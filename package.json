{
  "name": "sokuji",
  "productName": "Sokuji",
  "version": "0.3.8",
  "private": true,
  "main": "electron/main.js",
  "homepage": "./",
  "description": "Live speech translation application using OpenAI's Realtime API",
  "author": {
    "name": "Kizuna AI Lab",
    "email": "contact@kizuna.ai"
  },
  "dependencies": {
    "@iarna/toml": "^2.2.5",
    "@openai/realtime-api-beta": "github:openai/openai-realtime-api-beta",
    "@testing-library/jest-dom": "^5.17.0",
    "@testing-library/react": "^13.4.0",
    "@testing-library/user-event": "^13.5.0",
    "@types/jest": "^27.5.2",
    "@types/node": "^16.18.108",
    "@types/react": "^18.3.5",
    "@types/react-dom": "^18.3.0",
    "dotenv": "^16.4.5",
    "electron-squirrel-startup": "^1.0.1",
    "node-fetch": "^2.7.0",
    "react": "^18.3.1",
    "react-dom": "^18.3.1",
    "react-feather": "^2.0.10",
    "react-scripts": "^5.0.1",
    "sass": "^1.78.0",
    "save": "^2.9.0",
    "typescript": "^4.9.5",
    "web-vitals": "^2.1.4",
    "ws": "^8.18.0"
  },
  "devDependencies": {
    "@electron-forge/cli": "^7.8.0",
    "@electron-forge/maker-deb": "^7.8.0",
    "@electron-forge/maker-flatpak": "^7.8.0",
    "@electron-forge/maker-snap": "^7.8.0",
    "@electron-forge/maker-squirrel": "^7.8.0",
    "@electron-forge/maker-zip": "^7.8.0",
    "@electron-forge/plugin-auto-unpack-natives": "^7.8.0",
    "@electron-forge/plugin-fuses": "^7.8.0",
    "@electron/fuses": "^1.8.0",
    "concurrently": "^8.2.2",
    "cross-env": "^7.0.3",
    "electron": "^34.0.0",
    "electron-rebuild": "^3.2.9",
    "wait-on": "^7.2.0"
  },
  "scripts": {
    "start": "react-scripts start",
    "build": "react-scripts build",
    "test": "react-scripts test",
    "eject": "react-scripts eject",
    "electron:dev": "concurrently --kill-others \"cross-env BROWSER=none npm start\" \"wait-on http://localhost:3000 && electron .\"",
    "electron:build": "npm run build && npm run make",
    "electron:start": "electron .",
    "package": "npm run build && electron-forge package",
    "make": "npm run build && electron-forge make",
    "postinstall": "electron-rebuild"
  },
  "eslintConfig": {
    "extends": [
      "react-app",
      "react-app/jest"
    ],
    "env": {
      "es2020": true,
      "browser": true,
      "node": true
    },
    "parserOptions": {
      "ecmaVersion": 2020
    }
  },
  "browserslist": {
    "production": [
      ">0.2%",
      "not dead",
      "not op_mini all"
    ],
    "development": [
      "last 1 chrome version",
      "last 1 firefox version",
      "last 1 safari version"
    ]
  },
  "config": {
    "forge": "./forge.config.js"
  }
}
