    "dotenv": "^16.4.5",
    "electron-squirrel-startup": "^1.0.1",
    "i18next": "^25.2.1",
    "i18next-browser-languagedetector": "^8.1.0",
    "lucide-react": "^0.515.0",
    "node-fetch": "^2.7.0",
    "posthog-js": "^1.250.1",
    "react": "^18.3.1",
    "react-dom": "^18.3.1",
    "react-i18next": "^15.5.2",
    "react-icons": "^5.5.0",
    "react-joyride": "^2.9.3",
    "sass": "^1.78.0",
    "save": "^2.9.0",
    "styletron-engine-atomic": "^1.6.2",
