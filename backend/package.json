{
  "name": "sokuji-backend",
  "version": "1.0.0",
  "description": "Sokuji backend with better-auth and Cloudflare Workers",
  "main": "src/index.ts",
  "scripts": {
    "dev": "wrangler dev --config wrangler.dev.toml",
    "dev:remote": "wrangler dev --config wrangler.dev.toml --remote",
    "build": "tsc --noEmit",
    "deploy": "wrangler deploy --minify",
    "deploy:dev": "wrangler deploy --config wrangler.dev.toml",
    "deploy:prod": "wrangler deploy",
    "cf-typegen": "wrangler types --env-interface CloudflareBindings",
    "db:generate": "drizzle-kit generate",
    "db:migrate:dev": "wrangler d1 execute sokuji-db-dev --config wrangler.dev.toml --file=./drizzle/0000_tearful_alex_power.sql --local",
    "db:migrate:prod": "wrangler d1 execute sokuji-db-prod --file=./drizzle/0000_tearful_alex_power.sql --remote",
    "db:migrate:all:dev": "wrangler d1 migrations apply sokuji-db-dev --config wrangler.dev.toml --local",
    "db:migrate:all:prod": "wrangler d1 migrations apply sokuji-db-prod --remote",
    "db:seed:dev": "wrangler d1 execute sokuji-db-dev --config wrangler.dev.toml --file=./drizzle/seed.sql --local",
    "db:seed:prod": "wrangler d1 execute sokuji-db-prod --file=./drizzle/seed.sql --remote",
    "db:studio:dev": "drizzle-kit studio --config drizzle.config.ts",
    "db:studio:prod": "drizzle-kit studio --config drizzle.config.ts"
  },
  "dependencies": {
    "better-auth": "^1.0.28",
    "better-auth-cloudflare": "^0.1.0",
    "drizzle-orm": "^0.36.4",
    "hono": "^4.9.6",
    "openai-realtime-api": "^1.0.8"
  },
  "devDependencies": {
    "@cloudflare/workers-types": "^4.20250101.0",
    "@types/node": "^22.10.5",
    "drizzle-kit": "^0.30.0",
    "typescript": "^5.7.2",
    "wrangler": "^4.28.1"
  }
}
