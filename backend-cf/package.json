{
  "name": "sokuji-backend-cf",
  "version": "1.0.0",
  "description": "Cloudflare Workers backend for Sokuji AI translation service",
  "main": "src/index.ts",
  "scripts": {
    "dev": "wrangler dev",
    "dev:remote": "wrangler dev --config wrangler.dev.toml --remote",
    "deploy": "wrangler deploy",
    "deploy:dev": "wrangler deploy --config wrangler.dev.toml",
    "deploy:prod": "wrangler deploy",
    "db:init": "wrangler d1 execute sokuji-db --file=./schema/database.sql",
    "db:init:dev": "wrangler d1 execute sokuji-db-dev --file=./schema/database.sql --config wrangler.dev.toml",
    "db:init:dev:remote": "wrangler d1 execute sokuji-db-dev --file=./schema/database.sql --config wrangler.dev.toml --remote",
    "db:init:prod": "wrangler d1 execute sokuji-db-prod --file=./schema/database.sql",
    "db:init:prod:remote": "wrangler d1 execute sokuji-db-prod --file=./schema/database.sql --remote",
    "db:migrate": "wrangler d1 migrations apply sokuji-db",
    "db:migrate:dev": "wrangler d1 migrations apply sokuji-db-dev --config wrangler.dev.toml",
    "logs:dev": "wrangler tail --config wrangler.dev.toml",
    "logs:prod": "wrangler tail"
  },
  "dependencies": {
    "@clerk/backend": "^0.38.0",
    "hono": "^4.0.0",
    "svix": "^1.15.0"
  },
  "devDependencies": {
    "@cloudflare/workers-types": "^4.20240117.0",
    "typescript": "^5.3.0",
    "wrangler": "^4.28.1"
  }
}
